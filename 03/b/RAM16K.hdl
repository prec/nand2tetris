/**
 * Memory of 16K registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load=1, then 
 * the in value is loaded into the memory location specified by address 
 * (the loaded value will be emitted to out after the next time step.)
 */

CHIP RAM16K {
    IN in[16], load, address[14];
    OUT out[16];

    PARTS:
    DMux4Way(in=load, sel=address[0..1], a=loada, b=loadb, c=loadc, d=loadd);
	RAM4K(in=in, out=a, load=loada, address=address[2..13]);
	RAM4K(in=in, out=b, load=loadb, address=address[2..13]);
	RAM4K(in=in, out=c, load=loadc, address=address[2..13]);
	RAM4K(in=in, out=d, load=loadd, address=address[2..13]);
	Mux4Way16(a=a, b=b, c=c, d=d, sel=address[0..1], out=out);
}